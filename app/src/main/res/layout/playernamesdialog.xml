<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativelayout"
    android:gravity="center"
    android:layout_gravity="center"
    android:background="@drawable/bluepopupbackground">
    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/monopolybold"
        android:textSize="30sp"
        android:textColor="@color/one"
        android:text="Enter Player Names"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="18dp"
        android:layout_centerHorizontal="true"/>

    <ListView
        android:id="@+id/nameslist"
        android:layout_width="300dp"
        android:layout_height="250dp"
        tools:listitem="@layout/edittext"
        tools:itemCount="4"
        android:layout_centerInParent="true"
        android:layout_below="@+id/message"/>
    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/monopolybold"
        android:text="Submit"
        android:textColor="@color/white"
        android:background="@drawable/ovalbutton"
        android:layout_marginBottom="30dp"
        android:layout_below="@+id/nameslist"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>