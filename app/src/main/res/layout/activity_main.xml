<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/logo"
            android:layout_width="75dp"
            android:layout_height="150dp"
            android:src="@drawable/monopolyman"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="50dp"/>
        <TextView
            android:id="@+id/monopoly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/monopolybold"
            android:text="MONOPOLY"
            android:textSize="65dp"
            android:textColor="@color/bostonred"
            android:layout_below="@+id/logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"/>

        <ImageView
            android:id="@+id/play"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/playbutton"
            android:layout_marginTop="50dp"
            android:layout_centerInParent="true"
            android:layout_below="@+id/monopoly"/>
        <ImageView
            android:id="@+id/animationview"
            android:layout_width="300dp"
            android:layout_height="500dp"
            android:background="@drawable/diceanimation"
            android:layout_centerInParent="true"
            android:visibility="gone"/>

</RelativeLayout>